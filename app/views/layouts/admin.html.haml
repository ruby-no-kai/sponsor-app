!!! 5
%html
  %head
    %meta{charset: 'utf-8'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1, shrink-to-fit=no'}
    %title= yield(:title) || 'sponsor-app admin'
    = csrf_meta_tags
    = csp_meta_tag
    = vite_stylesheet_tag 'application.css'

    %meta{name: 'rk:sentry-dsn', content: Rails.configuration.x.sentry.dsn}
    %meta{name: 'rk:release', content: Rails.configuration.x.release.release}

    = vite_client_tag
    = vite_typescript_tag 'admin'
  %body
    %nav.navbar.navbar-expand-lg.navbar-light.bg-light
      %a.navbar-brand{href: '/'} Sponsorships Admin
      %button.navbar-toggler{type: :button, data: {toggle: :collapse, target: '#navbarNavAltMarkup'}, aria: {controls: 'navbarNavAltMarkup', expanded: false, label: 'Toggle navigation'}}
        %span.navbar-toggler-icon
      .collapse.navbar-collapse#navbarNavAltMarkup
        .navbar-nav
          - if current_staff
            %a.nav-item.nav-link{href: conferences_path} Conferences
      .collapse.navbar-collapse
        %ul.navbar-nav.ml-auto
          %li.nav-item
            - if current_staff
              = link_to "@#{current_staff.login}", session_path, method: :delete, class: 'nav-link', data: {confirm: 'Log out?'}
    .container
      %main
        - if notice
          .alert.alert-success= notice
        = yield
