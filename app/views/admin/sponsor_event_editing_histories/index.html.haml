- content_for(:title) { t('.title') }

%nav{aria: {label: 'breadcrumb'}}
  %ol.breadcrumb
    %li.breadcrumb-item= link_to @conference.name, conference_path(@conference)
    %li.breadcrumb-item= link_to @sponsorship.name, conference_sponsorship_path(@conference, @sponsorship)
    %li.breadcrumb-item= link_to @sponsor_event.title, conference_sponsor_event_path(@conference, @sponsor_event)
    %li.breadcrumb-item.active{aria: {current: 'page'}} History

%h5 Editing histories

- @editing_histories.each do |history|
  %section.my-3
    .card
      .card-header
        Edit at #{history.created_at}
        - if history.staff
          by #{history.staff.login}
        - else
          by sponsor
      .card-body
        - if history.diff.present?
          %table.table.table-responsible-sm
            %tbody
              - history.diff.each do |row|
                %tr{class: {'~' => 'bg-warning', '+' => 'bg-info', '-' => 'bg-danger'}[row[0]] }
                  %td= row[0]
                  %td= row[1].to_json
                  - if row[0] == '~'
                    %td= row[3].to_json
                  - else
                    %td= row[2].to_json
        - else
          %span.label.label-info No diff
