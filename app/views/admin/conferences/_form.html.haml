= form_with(model: conference, local: true) do |form|
  - if conference.errors.any?
    .alert.alert-danger
      %p #{pluralize(conference.errors.count, "error")} prohibited this from being saved:
      %ul
        - conference.errors.full_messages.each do |message|
          %li= message
  .form-group
    = form.label :name
    = form.text_field :name, class: 'form-control', required: true
  .form-group
    = form.label :slug
    = form.text_field :slug, class: 'form-control', required: true
  .form-group
    = form.label :contact_email_address
    = form.email_field :contact_email_address, class: 'form-control', required: true
  .form-group
    = form.label :github_repo
    = form.text_field :github_repo, class: 'form-control'
    %small.form-text
      %code owner/repo[@branch]:path/to/file
  .form-group
    = form.label :tito_slug
    = form.text_field :tito_slug, class: 'form-control'
    %small.form-text
      %code account_slug/event_slug
  .form-group
    = form.label :tito_booth_paid_flat_discount_amount
    = form.number_field :tito_booth_paid_flat_discount_amount, class: 'form-control', step: '0.01'
  .form-group
    = form.label :application_opens_at
    .input-group
      = form.datetime_local_field :application_opens_at, class: 'form-control', step: 1
      .input-group-append
        %button.btn.btn-outline-secondary{type: 'button', commandfor: 'conference_application_opens_at', command: '--set-now'} Now
  .form-group
    = form.label :application_closes_at
    .input-group
      = form.datetime_local_field :application_closes_at, class: 'form-control', step: 1
      .input-group-append
        %button.btn.btn-outline-secondary{type: 'button', commandfor: 'conference_application_closes_at', command: '--set-now'} Now
  .form-group
    = form.label :amendment_closes_at
    .input-group
      = form.datetime_local_field :amendment_closes_at, class: 'form-control', step: 1
      .input-group-append
        %button.btn.btn-outline-secondary{type: 'button', commandfor: 'conference_amendment_closes_at', command: '--set-now'} Now
  .form-group
    = form.label :event_submission_starts_at
    .input-group
      = form.datetime_local_field :event_submission_starts_at, class: 'form-control', step: 1
      .input-group-append
        %button.btn.btn-outline-secondary{type: 'button', commandfor: 'conference_event_submission_starts_at', command: '--set-now'} Now
  .form-group
    = form.label :ticket_distribution_starts_at
    .input-group
      = form.datetime_local_field :ticket_distribution_starts_at, class: 'form-control', step: 1
      .input-group-append
        %button.btn.btn-outline-secondary{type: 'button', commandfor: 'conference_ticket_distribution_starts_at', command: '--set-now'} Now
  .form-group
    = form.label :pass_retraction_disables_at
    .input-group
      = form.datetime_local_field :pass_retraction_disables_at, class: 'form-control', step: 1
      .input-group-append
        %button.btn.btn-outline-secondary{type: 'button', commandfor: 'conference_pass_retraction_disables_at', command: '--set-now'} Now
  .form-group
    = form.label :booth_capacity
    = form.number_field :booth_capacity, class: 'form-control'
    %small.form-text
      %code must be 1+ to activate booth request form

  .form-group
    .form-check
      = form.check_box :additional_attendees_registration_open, class: 'form-check-input'
      = form.label :additional_attendees_registration_open, class: 'form-check-label'

  .form-group
    .form-check
      = form.check_box :hidden, class: 'form-check-input'
      = form.label :hidden, class: 'form-check-label'

  .form-group
    .form-check
      = form.check_box :no_plan_allowed, class: 'form-check-input'
      = form.label :no_plan_allowed, class: 'form-check-label'

  .form-group
    .form-check
      = form.check_box :allow_restricted_access, class: 'form-check-input'
      = form.label :allow_restricted_access, class: 'form-check-label'

  .form-group
    = form.submit class: 'btn btn-primary'
